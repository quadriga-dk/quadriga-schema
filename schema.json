{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "tag:quadriga-dk.de,2025:schema",
    "title": "QUADRIGA OER",
    "description": "Ein Jupyter Book (Buch, Sammlung von OERs), das nach dem QUADRIGA-Metadatenschema beschrieben wird.",
    "@context": {
        "dct": "http://purl.org/dc/terms/",
        "schema": "http://schema.org/"
    },
    "type": "object",
    "required": [
        "authors",
        "chapters",
        "context-of-creation",
        "date-of-last-change",
        "description",
        "discipline",
        "duration",
        "identifier",
        "book-version",
        "publication-date",
        "schema-version",
        "target-group",
        "title",
        "type-of-research-object"
    ],
    "properties": {
        "authors": {
            "$ref": "authors.json"
        },
        "chapters": {
          "$ref": "chapters.json"
        },
        "context-of-creation": {
            "$ref": "context-of-creation.json"
        },
        "date-of-last-change": {
            "$ref": "date-of-last-change.json"
        },
        "description": {
          "$ref": "description.json"
        },
        "discipline": {
            "$ref": "discipline.json"
        },
        "duration": {
            "$ref": "duration.json"
        },
        "git": {
            "$ref": "git.json"
        },
        "has-predecessor": {
            "$ref": "has-predecessor.json"
        },
        "has-successor": {
            "$ref": "has-successor.json"
        },
        "identifier": {
            "$ref": "identifier.json"
        },
        "keywords": {
          "$ref": "keywords.json"
        },
        "language": {
          "$ref": "language.json"
        },
        "license": {
          "$ref": "license.json"
        },
        "book-version": {
          "$ref": "book-version.json"
        },
        "prerequisites": {
          "$ref": "prerequisites.json"
        },
        "publication-date": {
          "$ref": "publication-date.json"
        },
        "quality-assurance": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "person",
                    "date"
                ],
                "properties": {
                    "person": {
                        "$ref": "#/$defs/person"
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "description": {
                        "$ref": "#/$defs/multilingual-text"
                    }
                }
            }
        },
        "related-works": {
            "description": "Eine Liste von Verweisen und jeweils einer kurzen Beschreibung zu zusätzlichen, weiterführenden Inhalten o.ä.",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "url",
                    "description"
                ],
                "properties": {
                    "description": {
                        "description": "Beschreibung des verlinkten Werks und dessen Beziehung zum Buch.",
                        "$ref": "#/$defs/multilingual-text"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "additionalProperties": false
            }
        },
        "schema-version": {
            "description": "Versionsnummer des QUADRIGA-Metadatenschemas",
            "enum": [
                "1.1",
                "1.1-beta",
                "1.1-beta2"
            ]
        },
        "target-group": {
            "description": "Zielgruppe",
            "type": "array",
            "minItems": 1,
            "items": {
                "enum": [
                    "Forschende (PostDoc)",
                    "Forschende (Projektleitung)",
                    "Promovierende",
                    "Hochschullehrende"
                ]
            },
            "@id": "dct:audience"
        },
        "title": {
            "description": "Titel des Buchs",
            "type": "string",
            "@id": "dct:title"
        },
        "type-of-learning-resource": {
            "enum": [
                "Jupyter Book"
            ]
        },
        "type-of-research-object": {
            "description": "Nennung des Datentyps, der vorrangig im Buch behandelt wird.",
            "type": "array",
            "minItems": 1,
            "maxItems": 2,
            "items": {
                "enum": [
                    "Text",
                    "Tabelle",
                    "Bewegtes Bild",
                    "übergreifend"
                ]
            }
        },
        "url": {
            "description": "URL des Buchs.",
            "type": "string",
            "format": "uri"
        },
        "used-tools": {
            "description": "Liste von Tools, die bei der Erstellung des Buchs verwendet wurden.",
            "type": "array",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "type": "string",
                        "format": "uri"
                    },
                    {
                        "description": "Strukturierte Angabe des Tools",
                        "@id": "schema:softwareApplication",
                        "properties": {
                            "name": {
                                "$ref": "#/$defs/multilingual-text"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                ]
            }
        }
    },
    "additionalProperties": false,
    "$defs": {
        "learning-objectives": {
            "description": "Eine Liste von Lernzielen.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": [
                    "learning-objective",
                    "competency",
                    "data-flow",
                    "focus",
                    "blooms-category"
                ],
                "properties": {
                    "learning-objective": {
                        "description": "Formulierung des Lernziels.",
                        "$ref": "#/$defs/multilingual-text"
                    },
                    "competency": {
                        "description": "Im Lernziel adressierte Kompetenz nach dem QUADRIGA Datenkompetenzframework.",
                        "enum": [
                            "1 Basiskompetenz",
                            "2 Identifikation",
                            "3 Qualitätssicherung",
                            "4 Ethik und Recht",
                            "5 Erhebung",
                            "6 Validierung",
                            "7 Aufbereitung",
                            "8 Management",
                            "9 Erschließung",
                            "10 Datenanalyse",
                            "11 Visualisierung",
                            "12 Interpretation",
                            "13 Aufbereitung",
                            "14 Datenpublikation",
                            "15 Kommunikation"
                        ]
                    },
                    "focus": {
                        "description": "Fokus des Lernziels auf den Aspekt \"Wissen\", \"Fähigkeit\" oder \"Haltung\" der Kompetenz.",
                        "enum": [
                            "Wissen",
                            "Fähigkeit",
                            "Haltung"
                        ]
                    },
                    "data-flow": {
                        "description": "Schritt im Datenfluss, dem die Kompetenz zugeordnet ist.",
                        "enum": [
                            "Grundlagen",
                            "Planung",
                            "Erhebung und Aufbereitung",
                            "Management",
                            "Analyse",
                            "Publikation und Nachnutzung"
                        ]
                    },
                    "blooms-category": {
                        "description": "Kategorie der Bloomschen Taxonomie, welcher das Lernziel zugeordnet ist. Aus der Kombination der Zuordnungen der Lernziele eines Kapitels lässt sich ein allgemeines Kompetenzniveau (\"Basis\", \"Fortgeschritten\", \"Expert:in\") ableiten.",
                        "enum": [
                            "1 Erinnern",
                            "2 Verstehen",
                            "3 Anwenden",
                            "4 Analysieren",
                            "5 Bewerten",
                            "6 Erschaffen"
                        ]
                    },
                    "assessment": {
                        "description": "Beschreibung der Art der Überprüfung des Lernziels.",
                        "$ref": "#/$defs/multilingual-text"
                    },
                    "learning-objective-id": {
                        "description": "Eindeutige ID des Lernziels für den Zweck der Einbindung im Buch per `glue`.",
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "multilingual-text": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "description": "Sollen Metadaten mehrsprachig definiert werden, so wird als Key der Sprachcode nach ISO639-1 verwendet.",
                    "type": "object",
                    "patternProperties": {
                        "^[a-z][a-z]$": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },
        "person": {
            "description": "Eine Person, die an der Erstellung des Buchs beteiligt war.",
            "@id": "schema:person",
            "oneOf": [
                {
                    "type": "string",
                    "description": "Vollständiger Name der Person."
                },
                {
                    "description": "Strukturierte Angabe der Person bestehend mindestens aus Vor- und Nachname.",
                    "$comment": "Andere Schlüssel können nach Bedarf angelegt werden.",
                    "type": "object",
                    "required": [
                        "given-names",
                        "family-names"
                    ],
                    "properties": {
                        "given-names": {
                            "description": "Vorname(n) der Person",
                            "type": "string",
                            "@id": "schema:givenName"
                        },
                        "family-names": {
                            "description": "Nachname(n) der Person",
                            "type": "string",
                            "@id": "schema:familyName"
                        },
                        "orcid": {
                            "description": "ORCID der Autor:in als URI (https://orcid.org/XXXX-XXXX-XXXX-XXXX)",
                            "type": "string",
                            "format": "uri",
                            "pattern": "^https://orcid.org/[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[0-9X]$"
                        },
                        "credit": {
                            "description": "Rolle der Person nach CRediT (siehe https://credit.niso.org.",
                            "type": "array",
                            "items": {
                                "enum": [
                                    "Conceptualization",
                                    "Data curation",
                                    "Formal analysis",
                                    "Funding acquisition",
                                    "Investigation",
                                    "Methodology",
                                    "Project administration",
                                    "Software",
                                    "Resources",
                                    "Supervision",
                                    "Validation",
                                    "Visualization",
                                    "Writing",
                                    "Writing – original draft",
                                    "Writing – review & editing"
                                ]
                            }
                        }
                    },
                    "additionalProperties": true
                }
            ]
        },
        "semver": {
            "type": "string",
            "description": "Semantic Versioning 2.0.0 (https://semver.org)",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
        }
    }
}
