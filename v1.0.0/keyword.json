{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/keyword.json",
  "title": "keyword â€“ Schlag-/Stichwort",
  "description": "Ein Schlag-/Stichwort; als (ggf. mehrsprachiger) Text oder als URI",
  "oneOf": [
    {
      "$ref": "multilingual-text.json"
    },
    {
      "type": "string",
      "format": "uri"
    }
  ],
  "x-mappings": {
    "$comment": "dcat:keyword has the value range of rdfs:Literal so URIs are not allowed.",
    "dc": {
      "relation": "skos:exactMatch",
      "target": "dc:subject"
    },
    "dcat": {
      "relation": "skos:narrowMatch",
      "target": "dcat:keyword"
    },
    "dcterms": {
      "relation": "skos:exactMatch",
      "target": "dcterms:subject"
    },
    "hermes": [
      {
        "$comment": "HERMES Attribut #9: Hauptthema",
        "relation": "skos:exactMatch",
        "target": "dcterms:subject"
      },
      {
        "$comment": "HERMES Attribut #9: Hauptthema",
        "relation": "skos:closeMatch",
        "target": "schema:keywords"
      }
    ],
    "lrmi": null,
    "modalia": null,
    "schema": {
      "relation": "skos:exactMatch",
      "target": "schema:about"
    }
  }
}
