{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/credit.json",
  "title": "credit – CRediT-Rolle",
  "description": "Rolle der Person nach CRediT (siehe https://credit.niso.org/contributor-roles/.)",
  "type": "array",
  "items": {
    "oneOf": [
      {
        "enum": [
          "Conceptualization",
          "Data curation",
          "Formal analysis",
          "Funding acquisition",
          "Investigation",
          "Methodology",
          "Project administration",
          "Software",
          "Resources",
          "Supervision",
          "Validation",
          "Visualization",
          "Writing – original draft",
          "Writing – review & editing"
        ]
      },
      {
        "type": "object",
        "properties": {
          "role": {
            "title": "role – CRediT Rolle",
            "description": "CRediT-Rolle als URL.",
            "type": "string",
            "format": "url",
            "enum": [
              "https://credit.niso.org/contributor-roles/conceptualization/",
              "https://credit.niso.org/contributor-roles/data-curation/",
              "https://credit.niso.org/contributor-roles/formal-analysis/",
              "https://credit.niso.org/contributor-roles/funding-acquisition/",
              "https://credit.niso.org/contributor-roles/investigation/",
              "https://credit.niso.org/contributor-roles/methodology/",
              "https://credit.niso.org/contributor-roles/project-administration/",
              "https://credit.niso.org/contributor-roles/resources/",
              "https://credit.niso.org/contributor-roles/software/",
              "https://credit.niso.org/contributor-roles/supervision/",
              "https://credit.niso.org/contributor-roles/validation/",
              "https://credit.niso.org/contributor-roles/visualization/",
              "https://credit.niso.org/contributor-roles/writing-original-draft/",
              "https://credit.niso.org/contributor-roles/writing-review-editing/"
            ]
          },
          "degree": {
            "title": "degree – Beitragsstärke",
            "description": "Anteil des Beitrags in der angegebenen Rolle. Diese Angaben zur Beitragsstärke beschreiben den Umfang der Beteiligung und nicht hierarchische Ordnungen. (https://credit.niso.org/contributor-roles/#:~:text=An%20individual%20contributor,confirm%20assigned%20roles.)",
            "type": "string",
            "enum": ["lead", "equal", "supporting"]
          }
        }
      }
    ]
  },
  "x-mappings": {
    "dc": null,
    "dcterms": null,
    "lrmi": null,
    "modalia": {
      "relation": "skos:closeMatch",
      "target": "http://id.loc.gov/ontologies/bibframe/Role"
    },
    "schema": {
      "relation": "skos:closeMatch",
      "target": "schema:roleName"
    }
  }
}
