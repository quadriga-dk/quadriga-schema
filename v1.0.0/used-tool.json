{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/used-tool.json",
  "title": "used-tool – Verwendetes Werkzeug",
  "description": "Ein bei der Erstellung des Buchs verwendetes Software-Tool.",
  "oneOf": [
    {
      "type": "string",
      "format": "uri"
    },
    {
      "description": "Strukturierte Angabe des Tools",
      "properties": {
        "name": {
          "title": "name – Name des Tools",
          "description": "Name / Titel des genutzten Software-Tools.",
          "$ref": "multilingual-text.json"
        },
        "url": {
          "title": "url – URL des Tools",
          "description": "URL, die zum Tool (bspw. (Hersteller-)Website, Download-Seite, …) führt.",
          "type": "string",
          "format": "uri"
        }
      }
    }
  ],
  "x-mappings": {
    "dc": null,
    "dcterms": {
      "relation": "skos:closeMatch",
      "property": "dcterms:requires"
    },
    "lrmi": null,
    "modalia": null,
    "schema": {
      "relation": "skos:exactMatch",
      "property": "schema:SoftwareApplication"
    }
  }
}
