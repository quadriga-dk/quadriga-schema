{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/learning-objectives-entry.json",
  "title": "learning-objectives-entry – Lernzielbeschreibung",
  "description": "Umfassende Beschreibung eines einzelnen Lernziels mit zugehöriger Kompetenz, Datenflussschritt und Bloom'scher Kategorie.",
  "type": "object",
  "required": [
    "learning-objective",
    "competency",
    "data-flow",
    "blooms-category"
  ],
  "additionalProperties": false,
  "properties": {
    "learning-objective": {
      "title": "learning-objective – Lernziel",
      "description": "Formulierung des Lernziels.",
      "$ref": "multilingual-text.json"
    },
    "competency": {
      "$ref": "competency.json"
    },
    "data-flow": {
      "$ref": "competency_data-flow.json"
    },
    "blooms-category": {
      "$ref": "blooms-category.json"
    },
    "assessment": {
      "title": "assessment – Lernstandskontrolle",
      "description": "Beschreibung der Lernstandskontrolle für das Lernziel.",
      "$ref": "multilingual-text.json",
      "x-mappings": {
        "dc": null,
        "dcterms": null,
        "lrmi": {
          "relation": "skos:closeMatch",
          "target": "lrmi:assesses"
        },
        "modalia": null,
        "schema": {
          "relation": "skos:closeMatch",
          "target": "schema:assesses"
        }
      }
    },
    "jupyter-book-glue-id": {
      "title": "jupyter-book-glue-id – Jupyter Book `glue` ID",
      "description": "Eindeutige ID des Lernziels für den Zweck der Einbindung im Buch per `glue`. Nur für die interne Verwendung beim Schreiben der OER.",
      "type": "string"
    }
  },
  "x-mappings": {
    "dc": null,
    "dcterms": null,
    "lrmi": {
      "relation": "skos:exactMatch",
      "target": "lrmi:teaches"
    },
    "modalia": {
      "relation": "skos:exactMatch",
      "target": "modalia:hasLearningObjective"
    },
    "schema": {
      "relation": "skos:exactMatch",
      "target": "schema:teaches"
    }
  }
}
