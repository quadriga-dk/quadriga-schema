{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/language.json",
  "description": "Sprache des Buchs als ISO639-1 Sprachcode.",
  "oneOf": [
    {
      "type": "string",
      "pattern": "^[a-z]{2}$",
      "description": "Einzelne Sprache als ISO639-1 Code"
    },
    {
      "type": "array",
      "description": "Mehrere Sprachen als ISO639-1 Codes",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z]{2}$"
      }
    }
  ]
}
