{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/keywords.json",
  "title": "keywords – Schlag-/Stichwörter",
  "description": "Liste von Schlag-/Stichwörtern, welche das Buch und dessen (Lern-)Inhalte beschreiben.",
  "type": "array",
  "minItems": 1,
  "items": {
    "$ref": "keyword.json"
  },
  "x-mappings": {
    "$comment": "MoDALIA only allows for the definition of a list of keywords as strings.",
    "dc": {
      "relation": "skos:closeMatch",
      "target": "dc:subject"
    },
    "dcat": {
      "relation": "skos:closeMatch",
      "target": "dcat:keyword"
    },
    "dcterms": {
      "relation": "skos:closeMatch",
      "target": "dcterms:subject"
    },
    "hermes": [
      {
        "$comment": "HERMES Attribut #9: Hauptthema. Nur Werte aus der vorgegebenen Picklist erlaubt.",
        "relation": "skos:closeMatch",
        "target": "dcterms:subject"
      },
      {
        "$comment": "HERMES Attribut #9: Hauptthema. Nur Werte aus der vorgegebenen Picklist erlaubt.",
        "relation": "skos:narrowMatch",
        "target": "schema:keywords"
      }
    ],
    "lrmi": null,
    "modalia": {
      "relation": "skos:narrowMatch",
      "target": "schema:keywords"
    },
    "schema": [
      {
        "relation": "skos:exactMatch",
        "target": "schema:keywords"
      },
      {
        "relation": "skos:closeMatch",
        "target": "schema:about"
      }
    ]
  }
}
