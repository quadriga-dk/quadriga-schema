{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/discipline.json",
  "title": "discipline – Disziplin",
  "description": "Nennung der Disziplinen, die bei der Erstellung  im Fokus standen.\n\nenglish translation:\n\n- Verwaltungswissenschaften → Administrative sciences\n- Digital Humanities → Digital Humanities\n- Informatik → Computer science\n- Informationswissenschaft → Information science\n- übergreifend → Cross-disciplinary",
  "type": "array",
  "minItems": 1,
  "maxItems": 5,
  "items": {
    "enum": [
      "Verwaltungswissenschaften",
      "Digital Humanities",
      "Informatik",
      "Informationswissenschaft",
      "übergreifend"
    ]
  },
  "x-mappings": {
    "dc": {
      "relation": "skos:broadMatch",
      "property": "dc:subject"
    },
    "dcterms": {
      "relation": "skos:broadMatch",
      "property": "dcterms:subject"
    },
    "lrmi": null,
    "modalia": {
      "relation": "skos:exactMatch",
      "property": "modalia:Discipline"
    },
    "schema": {
      "relation": "skos:closeMatch",
      "property": "schema:about"
    }
  }
}
