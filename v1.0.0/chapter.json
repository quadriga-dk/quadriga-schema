{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://quadriga-dk.github.io/quadriga-schema/v1.0.0/chapter.json",
  "type": "object",
  "required": [
    "title",
    "description",
    "time-required",
    "learning-objectives",
    "learning-goal"
  ],
  "properties": {
    "title": {
      "$ref": "multilingual-text.json",
      "description": "Kapitelüberschrift"
    },
    "description": {
      "$ref": "multilingual-text.json",
      "description": "Beschreibung des Kapitelinhalts."
    },
    "url": {
      "description": "URL zum direkten Zugriff auf die erste Seite der 'Leseansicht' (Website) des Kapitel.",
      "type": "string",
      "format": "uri"
    },
    "time-required": {
      "$ref": "time-required.json",
      "description": "Geschätzte Bearbeitungsdauer des Kapitels."
    },
    "learning-objectives": {
      "$ref": "learning-objectives.json",
      "description": "Liste der Feinlernziele des Kapitels.",
      "$comment": "Ähnlich zu schema:teaches."
    },
    "learning-goal": {
      "$ref": "multilingual-text.json",
      "description": "Kurze Benennung des Groblernziels des Kapitels.",
      "$comment": "Ähnlich zu schema:teaches."
    },
    "supplemented-by": {
      "description": "Liste von Verweisen und jeweils einer kurzen Beschreibung zu im Kapitel genutzten bzw. erwähnten Werken, Datensätzen, …, die für das Durcharbeiten des Kapitels benötigt werden.",
      "oneOf": [
        {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "oneOf": [
              {
                "$ref": "multilingual-text.json"
              },
              {
                "$ref": "supplemental-material.json"
              }
            ]
          }
        },
        {
          "oneOf": [
            {
              "$ref": "multilingual-text.json"
            },
            {
              "$ref": "supplemental-material.json"
            }
          ]
        }
      ],
      "$comment": "Ähnlich zu dcterms:relation."
    },
    "language": {
      "$ref": "language.json",
      "description": "Sprache(n) des Kapitels. Überschreibt die Buchebene für dieses Kapitel."
    }
  },
  "x-mappings": {
    "dc": null,
    "dcterms": null,
    "lrmi": {
      "relation": "skos:exactMatch",
      "property": "lrmi:LearningResource"
    },
    "modalia": null,
    "schema": {
      "relation": "skos:exactMatch",
      "property": "schema:LearningResource"
    }
  }
}
